@page
@model CakoiGame.WebApp.Pages.Admin.User.IndexModel
@{
}


<div class="container mt-5" style="max-width: 100%;">
    <div class="d-flex justify-content-between mb-4">
        <!-- Nút Thêm thành viên căn trái -->
        <a asp-page="Create" class="btn btn-success">Thêm thành viên mới</a>

        <!-- Form tìm kiếm căn phải -->
    </div>

    <!-- Bảng hiển thị dữ liệu -->
    <div class="card custom-shadow">
        <table class="table table-hover table-striped table-bordered m-0">
            <thead class="table-primary text-center">
                <tr>
                    <th>Id User</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Access</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Users.Any())
                {
                    @foreach (var user in Model.Users)
                    {
                        <tr class="text-center">
                            <td>@user.IdqlUser</td>
                            <td>@user.UsernameUser</td>
                            <td>@user.PasswordUser</td>
                            <td>@user.EmailUser</td>
                            <td>@user.PhoneUser</td>
                            <td>@user.AccessUser</td>
                            <td>
                                <a asp-page="./Edit" asp-route-itemid="@user.IdqlUser" class="btn-edit me-1">Edit</a>
                                <a asp-page="./Delete" asp-route-itemid="@user.IdqlUser" class="btn-delete">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted">No user data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}